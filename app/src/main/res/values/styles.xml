<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:autoCompleteTextViewStyle">@style/MyEditText</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back_holo_dark_am</item>
        <item name="android:actionBarWidgetTheme">@style/MyActionBarWidgetTheme</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:textColor">@color/ent_foreground_white</item>
        <item name="android:background">@color/ent_background_dark</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- Search view style-->
    <style name="MyActionBarWidgetTheme" parent="@android:style/Theme.Holo">
        <item name="android:textColor">@color/ent_foreground_white</item>
        <item name="android:textColorHint">@color/ent_foreground_gray_light</item>
    </style>

    <style name="MyActionBarTitleText">
        <item name="android:textColor">@color/ent_foreground_white</item>
    </style>

    <style name="MyEditText" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:textColor">@color/ent_foreground_dark</item>
        <item name="android:background">@drawable/element_border_dark</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

</resources>
