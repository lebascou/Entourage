<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:background="@color/ent_background_dark">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_building"
            android:id="@+id/place_picture"
            android:background="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="6dp">

            <TextView
                android:id="@+id/place_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/ent_foreground_white"
                android:text="Unknown"
                android:gravity="left" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/place_distance"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="8dp"
                        android:textColor="@color/ent_foreground_white"
                        android:text="@string/place_default_distance"
                        android:gravity="left"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/place_population_female"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:textColor="@color/ent_foreground_white"
                        android:textSize="12dp"
                        android:gravity="bottom"
                        android:text="1"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/ic_female_white"/>

                    <TextView
                        android:id="@+id/place_population_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/ent_foreground_white"
                        android:textSize="12dp"
                        android:gravity="bottom"
                        android:text="1"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/ic_male_white"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="10px"
        android:background="@drawable/drop_shadow" >
    </View>
</LinearLayout>